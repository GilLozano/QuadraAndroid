<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:paddingTop="16dp"
    android:paddingHorizontal="50dp"
    tools:context="ReserveLocationFragment">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="SelecciÃ³n lugar de reserva"
        android:textColor="@color/colorTextPrimary"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0.3" />

    <ImageView
        android:id="@+id/ivLocationIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:contentDescription="location logo"
        android:src="@drawable/ic_location"
        app:tint="@color/colorTextSecondary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tilLocation"
        app:layout_constraintBottom_toBottomOf="@+id/tilLocation" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilLocation"
        style="@style/Widget.App.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:hint="Lugar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivLocationIcon"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        app:layout_constraintBottom_toTopOf="@+id/tilDateStart">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColor="@color/colorTextPrimary" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/ivDateStartIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_date"
        app:tint="@color/colorTextSecondary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tilDateStart"
        app:layout_constraintBottom_toBottomOf="@+id/tilDateStart" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilDateStart"
        style="@style/Widget.App.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:hint="Fecha de Inicio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivDateStartIcon"
        app:layout_constraintTop_toBottomOf="@+id/tilLocation"
        app:layout_constraintBottom_toTopOf="@+id/tilDateEnd">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etDateStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:focusable="false"
            android:clickable="true"
            android:textColor="@color/colorTextPrimary" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/ivDateEndIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_date"
        app:tint="@color/colorTextSecondary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tilDateEnd"
        app:layout_constraintBottom_toBottomOf="@+id/tilDateEnd" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilDateEnd"
        style="@style/Widget.App.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:hint="Fecha de Fin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivDateEndIcon"
        app:layout_constraintTop_toBottomOf="@+id/tilDateStart"
        app:layout_constraintBottom_toTopOf="@+id/btnSearchCars">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etDateEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:focusable="false"
            android:clickable="true"
            android:textColor="@color/colorTextPrimary" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSearchCars"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/colorGreenButton"
        android:paddingVertical="14dp"
        android:text="Buscar Autos"
        android:textColor="@color/colorOnGreenButton"
        android:textSize="16sp"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tilDateEnd" />

</androidx.constraintlayout.widget.ConstraintLayout>