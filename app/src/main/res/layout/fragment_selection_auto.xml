<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/colorBackground"
    tools:context=".SelectionAutoFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="Selección de Auto"
        android:textColor="@color/colorOnSurface"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filtros"
        android:textColor="@color/colorTextSecondary"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingEnd="8dp">

                <TextView
                    android:id="@+id/headerMarca"
                    style="@style/FilterHeaderStyle"
                    android:text="Marca" />
                <LinearLayout
                    android:id="@+id/containerMarca"
                    style="@style/FilterContainerStyle">
                    <CheckBox android:id="@+id/cbToyota" android:text="Toyota" style="@style/FilterCheckboxStyle"/>
                    <CheckBox android:id="@+id/cbHyundai" android:text="Hyundai" style="@style/FilterCheckboxStyle"/>
                    <CheckBox android:id="@+id/cbKia" android:text="Kia" style="@style/FilterCheckboxStyle"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/headerAnio"
                    style="@style/FilterHeaderStyle"
                    android:layout_marginTop="8dp"
                    android:text="Año" />
                <LinearLayout
                    android:id="@+id/containerAnio"
                    style="@style/FilterContainerStyle">
                    <CheckBox android:id="@+id/cb2022" android:text="2022" style="@style/FilterCheckboxStyle"/>
                    <CheckBox android:id="@+id/cb2021" android:text="2021" style="@style/FilterCheckboxStyle"/>
                    <CheckBox android:id="@+id/cb2020" android:text="2020" style="@style/FilterCheckboxStyle"/>
                </LinearLayout>

            </LinearLayout> <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="8dp">

            <TextView
                android:id="@+id/headerTipo"
                style="@style/FilterHeaderStyle"
                android:text="Tipo" />
            <LinearLayout
                android:id="@+id/containerTipo"
                style="@style/FilterContainerStyle">
                <CheckBox android:id="@+id/cbSedan" android:text="Sedán" style="@style/FilterCheckboxStyle"/>
                <CheckBox android:id="@+id/cbSUV" android:text="SUV" style="@style/FilterCheckboxStyle"/>
                <CheckBox android:id="@+id/cbDeportivo" android:text="Deportivo" style="@style/FilterCheckboxStyle"/>
            </LinearLayout>

            <TextView
                android:id="@+id/headerTransmision"
                style="@style/FilterHeaderStyle"
                android:layout_marginTop="8dp"
                android:text="Transmisión" />
            <LinearLayout
                android:id="@+id/containerTransmision"
                style="@style/FilterContainerStyle">
                <CheckBox android:id="@+id/cbAutomatica" android:text="Automática" style="@style/FilterCheckboxStyle"/>
                <CheckBox android:id="@+id/cbManual" android:text="Manual" style="@style/FilterCheckboxStyle"/>
            </LinearLayout>

        </LinearLayout> </LinearLayout>
    </ScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewAutos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_car"/>

</LinearLayout>